{
  "include": [
    "./src/*"
   ],
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "es2019"
    ],
    "jsx": "react",
    "types": [],
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": ["node_modules"]
}
